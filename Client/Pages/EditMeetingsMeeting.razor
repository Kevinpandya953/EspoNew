@page "/edit-meetings-meeting"

<PageTitle>Edit MeetingsMeeting</PageTitle>

    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save MeetingsMeeting</RadzenAlert>
        <RadzenTemplateForm TItem="EspoNew.Server.Models.EspoDbNew.MeetingsMeeting" Data="@meetingsMeeting" Visible="@(meetingsMeeting != null)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="meetingid" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@meetingsMeeting.meeting_id" Name="meeting_id" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="meeting_id" Text="meeting_id is required" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="name" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@meetingsMeeting.name" Name="name" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="deleted" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@meetingsMeeting.deleted" Name="deleted" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="status" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@meetingsMeeting.status" Name="status" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="datestart" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@meetingsMeeting.date_start" Name="date_start" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="dateend" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@meetingsMeeting.date_end" Name="date_end" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="isallday" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@meetingsMeeting.is_all_day" Name="is_all_day" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="description" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@meetingsMeeting.description" Name="description" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="datestartdate" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@meetingsMeeting.date_start_date" Name="date_start_date" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="dateenddate" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@meetingsMeeting.date_end_date" Name="date_end_date" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="parentid" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@meetingsMeeting.parent_id" Name="parent_id" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="parenttype" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@meetingsMeeting.parent_type" Name="parent_type" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="account" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@accountsaccountsForaccountId" TextProperty="account_id" ValueProperty="account_id" AllowClear=true
                        Disabled=@(hasaccount_idValue)  style="display: block; width: 100%" @bind-Value="@meetingsMeeting.account_id" Name="account_id"
                        SelectedValue=@accountsaccountsForaccountIdValue Count=@accountsaccountsForaccountIdCount LoadData=@accountsaccountsForaccountIdLoadData />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="assignedemployeeid" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@meetingsMeeting.assigned_employee_id" Name="assigned_employee_id" />
              </ChildContent>
            </RadzenFormField>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

