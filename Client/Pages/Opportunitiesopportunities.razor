@page "/opportunitiesopportunities"

<PageTitle>Opportunitiesopportunities</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Opportunitiesopportunities" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@opportunitiesopportunities" LoadData="@Grid0LoadData" Count="@count" TItem="EspoNew.Server.Models.EspoDbNew.OpportunitiesOpportunity" RowDoubleClick="@EditRow" RowSelect="@GetChildData">
            <Columns>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.OpportunitiesOpportunity" Property="opportunity_id" Title="opportunityid">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.OpportunitiesOpportunity" Property="name" Title="name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.OpportunitiesOpportunity" Property="deleted" Title="deleted">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.OpportunitiesOpportunity" Property="amount" Title="amount">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.OpportunitiesOpportunity" Property="stage" Title="stage">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.OpportunitiesOpportunity" Property="last_stage" Title="laststage">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.OpportunitiesOpportunity" Property="probability" Title="probability">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.OpportunitiesOpportunity" Property="lead_source" Title="leadsource">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.OpportunitiesOpportunity" Property="close_date" Title="closedate">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.OpportunitiesOpportunity" Property="description" Title="description">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.OpportunitiesOpportunity" Property="amount_currency" Title="amountcurrency">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.OpportunitiesOpportunity" Property="account.account_id" Title="account">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.OpportunitiesOpportunity" Property="contact.contact_id" Title="contact">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.OpportunitiesOpportunity" Property="campaign.campaign_id" Title="campaign">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.OpportunitiesOpportunity" Property="assigned_employee_id" Title="assignedemployeeid">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.OpportunitiesOpportunity" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="opportunitiesOpportunity">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, opportunitiesOpportunity)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
