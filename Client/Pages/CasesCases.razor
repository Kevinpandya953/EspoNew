@page "/casescases"

<PageTitle>Cases_cases</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Cases_cases" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@casesCases" LoadData="@Grid0LoadData" Count="@count" TItem="EspoNew.Server.Models.EspoDbNew.CasesCase" RowDoubleClick="@EditRow" RowSelect="@GetChildData">
            <Columns>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.CasesCase" Property="case_id" Title="caseid">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.CasesCase" Property="name" Title="name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.CasesCase" Property="deleted" Title="deleted">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.CasesCase" Property="number" Title="number">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.CasesCase" Property="status" Title="status">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.CasesCase" Property="priority" Title="priority">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.CasesCase" Property="type" Title="type">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.CasesCase" Property="description" Title="description">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.CasesCase" Property="account.account_id" Title="account">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.CasesCase" Property="lead.lead_id" Title="lead">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.CasesCase" Property="contact.contact_id" Title="contact">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.CasesCase" Property="inbound_email_id" Title="inboundemailid">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.CasesCase" Property="assigned_user_id" Title="assigneduserid">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.CasesCase" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="casesCase">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, casesCase)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
