@page "/add-cases-case"

<PageTitle>Add CasesCase</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save CasesCase</RadzenAlert>
        <RadzenTemplateForm TItem="EspoNew.Server.Models.EspoDbNew.CasesCase" Data="@casesCase" Visible="@(casesCase != null)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="caseid" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@casesCase.case_id" Name="case_id" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="case_id" Text="case_id is required" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="name" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@casesCase.name" Name="name" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="deleted" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@casesCase.deleted" Name="deleted" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="status" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@casesCase.status" Name="status" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="priority" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@casesCase.priority" Name="priority" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="type" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@casesCase.type" Name="type" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="description" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@casesCase.description" Name="description" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="account" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@accountsaccountsForaccountId" TextProperty="account_id" ValueProperty="account_id" AllowClear=true
                        Disabled=@(hasaccount_idValue)  style="display: block; width: 100%" @bind-Value="@casesCase.account_id" Name="account_id"
                        SelectedValue=@accountsaccountsForaccountIdValue Count=@accountsaccountsForaccountIdCount LoadData=@accountsaccountsForaccountIdLoadData />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="lead" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@leadsleadsForleadId" TextProperty="lead_id" ValueProperty="lead_id" AllowClear=true
                        Disabled=@(haslead_idValue)  style="display: block; width: 100%" @bind-Value="@casesCase.lead_id" Name="lead_id"
                        SelectedValue=@leadsleadsForleadIdValue Count=@leadsleadsForleadIdCount LoadData=@leadsleadsForleadIdLoadData />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="contact" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@contactscontactsForcontactId" TextProperty="contact_id" ValueProperty="contact_id" AllowClear=true
                        Disabled=@(hascontact_idValue)  style="display: block; width: 100%" @bind-Value="@casesCase.contact_id" Name="contact_id"
                        SelectedValue=@contactscontactsForcontactIdValue Count=@contactscontactsForcontactIdCount LoadData=@contactscontactsForcontactIdLoadData />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="inboundemailid" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@casesCase.inbound_email_id" Name="inbound_email_id" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="assigneduserid" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@casesCase.assigned_user_id" Name="assigned_user_id" />
              </ChildContent>
            </RadzenFormField>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

