@page "/callscalls"

<PageTitle>Callscalls</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Callscalls" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@callscalls" LoadData="@Grid0LoadData" Count="@count" TItem="EspoNew.Server.Models.EspoDbNew.CallsCall" RowDoubleClick="@EditRow" RowSelect="@GetChildData">
            <Columns>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.CallsCall" Property="call_id" Title="callid">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.CallsCall" Property="name" Title="name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.CallsCall" Property="deleted" Title="deleted">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.CallsCall" Property="status" Title="status">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.CallsCall" Property="date_start" Title="datestart">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.CallsCall" Property="date_end" Title="dateend">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.CallsCall" Property="direction" Title="direction">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.CallsCall" Property="description" Title="description">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.CallsCall" Property="parent_id" Title="parentid">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.CallsCall" Property="parent_type" Title="parenttype">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.CallsCall" Property="account.account_id" Title="account">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.CallsCall" Property="assigned_employee_id" Title="assignedemployeeid">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EspoNew.Server.Models.EspoDbNew.CallsCall" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="callsCall">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, callsCall)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
